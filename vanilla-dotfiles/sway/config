  natural_scroll enabled
  tap disabled
}

output "*" {
  bg /nix/store/j1caiw88pfgd280sml3gj7kdji74pnz8-macos-monterey-wwdc-21-stock-dark-mode-5k-5120x2880-5585.jpg fill
}

output "DP-1" {
  mode 3840x2160
  pos 0 0
  scale 1.8
}

output "HDMI-A-1" {
  pos 0 0
}

mode "(h) hibernate (l) lock (e) logout (r) reboot (u) suspend (s) shutdown" {
  bindsym Escape mode default
  bindsym Mod4+o mode default
  bindsym Return mode default
  bindsym e exec loginctl terminate-user $USER && swaymsg mode default
  bindsym h exec systemctl hibernate && swaymsg mode default
  bindsym l exec swaylock && swaymsg mode default
  bindsym r exec systemctl reboot && swaymsg mode default
  bindsym s exec systemctl poweroff && swaymsg mode default
  bindsym u exec systemctl suspend && swaymsg mode default
}

mode "(s) sound (d) displays (n) network (b) bluetooth (p) power" {
  bindsym Escape mode default
  bindsym Mod4+o mode default
  bindsym Return mode default
  bindsym b exec swaymsg mode default && alacritty --class floating_shell -o window.dimensions.columns=164 -o window.dimensions.lines=25 -e bluetuith
  bindsym d exec swaymsg mode default && nwg-displays
  bindsym n exec swaymsg mode default && alacritty --class floating_shell -o window.dimensions.columns=82 -o window.dimensions.lines=25 -e nmtui connect
  bindsym p mode "(h) hibernate (l) lock (e) logout (r) reboot (u) suspend (s) shutdown"
  bindsym s exec swaymsg mode default && swaymsg exec "alacritty --class floating_shell -o window.dimensions.columns=82 -o window.dimensions.lines=25 -e pulsemixer"
}

mode "󰄄  (r) region (s) screen" {
  bindsym Escape mode default
  bindsym Return mode default
  bindsym r exec swaymsg mode default && grim -g "$(slurp)" - | wl-copy
  bindsym s exec swaymsg mode default && grim -o "$(swaymsg -t get_outputs | jq -r '.[] | select(.focused)' | jq -r '.name')" - | wl-copy
}

